@model IEnumerable<ShinsyuKensaku.Models.Books>

@{
    ViewBag.Title = "Book Search Page";
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    <div class="row">
        <div class="col-md-4">
            <h2>検索結果を表示します。</h2>
            <table>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            @item.title
                        </td>
                        <td>
                            @item.body
                        </td>
                    </tr>
                }
            </table>
        </div>
        @{ 
            Layout = "~/Views/BookSearch/SearchResult.cshtml";
        }
    </div>

}
else
{

    <div class="jumbotron">
        <h1>検索の使用にはログインが必要です。</h1>
        <p class="lead">「浄土真宗のお言葉検索」の使用にはログインが必要です。</p>
        <p>右上から、ログインして使用してください。</p>
    </div>
}
